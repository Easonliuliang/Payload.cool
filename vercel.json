{
    "rewrites": [
        {
            "source": "/((?!api|_next|static|favicon.svg|sitemap.xml|robots.txt|privacy.html|terms.html|about.html|assets).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ],
    "trailingSlash": false
}